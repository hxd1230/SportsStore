@model SportsStore.Domain.Entities.ShippingDetails
@{
    ViewBag.Title = "SportsStore：Checkout";
}
<h2>Check out now</h2>
please enter your details,and we'll ship your goods right away!
@using (Html.BeginForm())
{
    <h3>Ship to</h3>
    <div>Name:@Html.EditorFor(c => c.Name)</div>
    <h3>Address</h3>
    <div>Line 1:@Html.EditorFor(c => c.Line1)</div>
    <div>Line 2:@Html.EditorFor(c => c.Line2)</div>
    <div>Line 3:@Html.EditorFor(c => c.Line3)</div>
    <div>City:@Html.EditorFor(c => c.City)</div>
    <div>State:@Html.EditorFor(c => c.State)</div>
    <div>Zip:@Html.EditorFor(c => c.Zip)</div>
    <div>Country:@Html.EditorFor(c => c.Country)</div>
    <h3>Options</h3>
    <label>
        @Html.EditorFor(c => c.GifWrap)
        Gift wrap there items
    </label>
    <p align="center">
        <input class="actionButtons" type="submit" value="Complete order" />
    </p>
}

